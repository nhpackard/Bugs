

if [ $1 == "-h" ]
then
bugs -h
exit
fi

seed="$$"
# if seed passed in args, replace seed=$$ with seed passed...
getnext=0
for aa in $@
do
    if [ $getnext == 1 ]
    then
        seed=$aa
        break
    fi
    if [ $aa == '-s' ]
    then
        getnext=1
    fi
done
echo "dobugs:  seed = $seed"
cat > "$out/seed" < echo $seed

# set up output data files
if [ ! -d "data" ]
then
mkdir data
fi
out="data/dat.$$"
echo "Output directory is $out"
mkdir $out
cp bugs.c $out
actfile="$out/activity"
popfile="$out/population"


graphpop.py $popfile &
#graphpop.py  &
echo "launched graphpop.py..."
graphact.py $actfile &
#graphact.py  &
echo "launched graphact.py..."
while [ ! -e $actfile ]
do
echo "waiting a sec..."
sleep 1
done
echo "starting bugs..."
bugs -s $seed
